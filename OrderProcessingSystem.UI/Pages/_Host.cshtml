@page "/"
@namespace OrderProcessingSystem.UI.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SANJ ORDERING SYSTEMS</title>
    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1CmrxMRARb6aLqgBO7yyAxTOQE2AKb9GfXnEw3J5o6v5gP6YfRvH+8abtTE1Pi6j" crossorigin="anonymous">
    <link href="~/css/app.css" rel="stylesheet" />
    <link href="~/css/orderprocess.css" rel="stylesheet" />
    <link href="~/css/login-notifications.css" rel="stylesheet" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <base href="~/" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>
    <!-- Bootstrap JS (bundle includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+Y5q2mZ6Y5q2mZ6Y5q2mZ6Y5q2mZ6" crossorigin="anonymous"></script>
    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha384-1H217gwSVyLSIfaLxHbE7dRb3v4mYCKbpQvzx0cegeju1MVsGrX5xXxAvs/HgeFs" crossorigin="anonymous"></script>
    <!-- SignalR Local - Load synchronously -->
    <script src="/js/signalr.min.js"></script>
    <script>
        console.log('SignalR load check in _Host.cshtml:', typeof signalR);
        if (typeof signalR !== 'undefined') {
            console.log('✅ SignalR loaded successfully in _Host.cshtml');
        } else {
            console.error('❌ SignalR failed to load in _Host.cshtml');
        }
    </script>
    <script src="/js/site-helpers.js"></script>
    <script src="/js/login-notifications.js"></script>
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
