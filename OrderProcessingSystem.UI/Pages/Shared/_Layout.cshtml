<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrderProcessingSystem.UI</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrderProcessingSystem.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout-overrides.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/common-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/generic-components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing-page.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login-component.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-success.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/role-selection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-activity.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/reports.css" asp-append-version="true" />
</head>
<body>
    <header>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-footer">
                <div class="container">
                    &copy; 2025 - OrderProcessingSystem.UI
                    @{
                        var path = Context?.Request?.Path.Value ?? string.Empty;
                        if (!path.Equals("/Privacy", StringComparison.OrdinalIgnoreCase) && !path.Equals("/Privacy/", StringComparison.OrdinalIgnoreCase))
                        {
                            @: - <a href="#" onclick="showPrivacyModal(event); return false;">Privacy</a>
                        }
                    }
                </div>
        </footer>

        <!-- Privacy modal (loads /Privacy into body) -->
        <div class="modal fade" id="privacyModal" tabindex="-1" aria-labelledby="privacyModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="privacyModalLabel">Privacy Policy</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="privacyModalBody">
                        <!-- loaded content -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    <!-- Attempt to load jQuery from CDN first for latest version, fall back to local copy if unavailable -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>window.jQuery || document.write('<script src="/lib/jquery/dist/jquery.min.js"><\/script>');</script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/site-helpers.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
