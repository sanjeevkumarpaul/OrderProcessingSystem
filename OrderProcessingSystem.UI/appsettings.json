{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiEndpoints": {
    "Data": {
      "Orders": "api/data/orders",
      "Suppliers": "api/data/suppliers", 
      "Customers": "api/data/customers",
      "CustomersWithOrders": "api/data/customers-with-orders",
      "SuppliersWithOrders": "api/data/suppliers-with-orders"
    },
    "TransExceptions": {
      "Base": "api/transexceptions"
    },
    "Reports": {
      "SalesByCustomer": "api/data/reports/sales-by-customer"
    },
    "UserLog": {
      "Base": "api/userlog",
      "LoginEvent": "api/userlog/login-event",
      "LoginAsAdmin": "api/userlog/login-as-admin",
      "LoginAsManager": "api/userlog/login-as-manager",
      "LoginAsUser": "api/userlog/login-as-user"
    }
  },
  "OAuth": {
    "Microsoft": {
      "ClientId": "your-microsoft-client-id-here",
      "ClientSecret": "your-microsoft-client-secret-here",
      "TenantId": "common"
    },
    "Google": {
      "ClientId": "your-google-client-id-here",
      "ClientSecret": "your-google-client-secret-here"
    }
  },
  "ApplicationSettings": {
    "JsonConfigurationPath": "JsonConfigurations/file-naming.json",
    "JsonConfigurationFallbackPath": "bin/Debug/net9.0/JsonConfigurations/file-naming.json",
    "ApiClient": {
      "BaseAddress": "http://localhost:5269/"
    }
  },
  "BlobStorageSimulation": {
    "FolderPath": "../BlobStorageSimulation",
    "MonitoredFileName": "OrderTransaction.json",
    "PollingIntervalSeconds": 5,
    "ApiEndpoints": {
      "BaseUrl": "http://localhost:5269/api",
      "OrderTransactionEndpoint": "orderprocessing/process-order-transaction",
      "OrderCancellationEndpoint": "orderprocessing/process-order-cancellation",
      "TransExceptionsEndpoint": "TransExceptions"
    }
  }
}
