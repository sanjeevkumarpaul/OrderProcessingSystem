<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrderProcessingServer</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrderProcessingServer.styles.css" asp-append-version="true" />
    <style>
        /* Keep a fixed footer that overlays page content; add bottom padding to main so content isn't hidden
           when scrolled under the footer. Adjust --footer-height if you change footer size. */
        :root { --footer-height: 64px; }
    /* Ensure the document fills the viewport and the main area scrolls internally so the footer stays fixed */
    html, body { height: 100%; }
    /* prevent horizontal overflow site-wide and ensure container gutters match Bootstrap's row negative margins */
    body, html { overflow-x: hidden; }
    body > .container { display: flex; flex-direction: column; min-height: calc(100vh - var(--footer-height)); box-sizing: border-box; padding-right: 0.75rem; padding-left: 0.75rem; }
        .fixed-footer {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            /* raise z-index so the footer always sits above page content and scrollbars */
            z-index: 1050;
            height: var(--footer-height);
            display: flex;
            align-items: center;
            background-color: #f8f9fa;
            /* subtle shadow to make it visually distinct from content while staying fixed */
            box-shadow: 0 -2px 6px rgba(0,0,0,0.04);
        }
    main[role="main"] { padding-bottom: calc(var(--footer-height) + 12px); flex: 1 1 auto; overflow: auto; padding-right: 0.75rem; padding-left: 0.75rem; box-sizing: border-box; }
    </style>
    <style>
        /* Ensure filter popup is not clipped by responsive table wrapper */
        .table-responsive { overflow-y: visible !important; overflow-x: auto; }
        .table thead th { position: relative; }
        .grid-filter-popup { position: absolute; top: 100%; margin-top: 6px; z-index: 3000; min-width: 200px; left: 0; background: white; }
    /* Flip the popup above the header when flip-up class is present (useful when there are no rows) */
    .grid-filter-popup.flip-up { top: auto; bottom: 100%; margin-top: 0; margin-bottom: 6px; }
    </style>
</head>
<body>
    <header>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-footer">
                <div class="container">
                    &copy; 2025 - OrderProcessingServer
                    @{
                        var path = Context?.Request?.Path.Value ?? string.Empty;
                        if (!path.Equals("/Privacy", StringComparison.OrdinalIgnoreCase) && !path.Equals("/Privacy/", StringComparison.OrdinalIgnoreCase))
                        {
                            @: - <a href="#" onclick="showPrivacyModal(event); return false;">Privacy</a>
                        }
                    }
                </div>
        </footer>

        <!-- Privacy modal (loads /Privacy into body) -->
        <div class="modal fade" id="privacyModal" tabindex="-1" aria-labelledby="privacyModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="privacyModalLabel">Privacy Policy</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="privacyModalBody">
                        <!-- loaded content -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    <!-- Attempt to load jQuery from CDN first for latest version, fall back to local copy if unavailable -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>window.jQuery || document.write('<script src="/lib/jquery/dist/jquery.min.js"><\/script>');</script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/site-helpers.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
